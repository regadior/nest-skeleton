{
  "name": "nest-skeleton",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": false,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=21.6.2",
    "npm": ">=10.2.4"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node src/index.ts",
    "start:dev": "nest start --tsc --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "check:types": "tsc --pretty --noEmit",
    "check:format": "prettier --check .",
    "check:lint": "eslint . --ext .js,.ts --color",
    "check:spelling": "cspell \"{.github/*.md,src/**/*.ts}\"",
    "prepare": "husky install",
    "commit": "cz",
    "prisma:generate": "npx prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/swagger": "^7.3.0",
    "@prisma/client": "^5.10.2",
    "@types/express": "^4.17.21",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cz": "^1.8.2",
    "express": "^4.18.2",
    "nestjs-pino": "^4.0.0",
    "pg": "^8.11.3",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "pretty-quick": "^4.0.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "semantic-release": "^23.0.2",
    "socket.io": "^4.7.4",
    "swagger": "^0.7.5"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.6.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cspell": "^8.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint-plugin-unused-imports": "^3.1.0",
    "extract-changelog-release": "^1.0.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "schema": "src/infrastructure/common/persistence/prisma/schema.prisma",
    "seed": "tsx src/infrastructure/common/persistence/prisma/seed.ts"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
